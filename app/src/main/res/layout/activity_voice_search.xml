<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="@drawable/bg8"
    android:orientation="vertical">


    <TableRow
        android:layout_width="match_parent"
        android:layout_height="164dp"
        android:gravity="center">

        <TextView
            android:id="@+id/textView60"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="50dp"
            android:fontFamily="serif"
            android:gravity="center"
            android:shadowColor="#7E7D7D"
            android:text="BUFFYBOT"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textColor="#F3F0F0"
            android:textColorHighlight="#756666"
            android:textSize="48sp"
            android:visibility="visible" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="132dp"
        android:gravity="center">

        <TextView
            android:id="@+id/textView59"
            android:layout_width="253dp"
            android:layout_height="48dp"
            android:fontFamily="serif"
            android:gravity="center"
            android:hint="Listening......."
            android:textColor="#E4E2E2"
            android:textColorHint="#ECE8E8"
            android:textSize="16sp"
            android:textStyle="italic" />

    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="173dp"
        android:gravity="center">

        <Button
            android:id="@+id/button29"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:background="#00BCD4"
            android:shadowColor="#7A7A7A"
            android:text="home" />
    </TableRow>

</LinearLayout>
