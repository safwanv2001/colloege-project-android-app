<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:background="@drawable/bg8"
    tools:context=".Staff_home">

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:gravity="center">

        <TextView
            android:id="@+id/textView60"
            android:layout_width="277dp"
            android:layout_height="128dp"
            android:layout_marginBottom="50dp"
            android:fontFamily="serif"
            android:gravity="bottom|center"
            android:shadowColor="#777575"
            android:shadowDx="-5"
            android:shadowDy="8"
            android:shadowRadius="10"
            android:text="BUFFYBOT"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textColor="#F6F3F3"
            android:textSize="48sp"
            android:visibility="visible" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <Button
            android:id="@+id/button10"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:text="Add and manage attendance" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:gravity="center">

        <Button
            android:id="@+id/button11"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:text="Add and manage work" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <Button
            android:id="@+id/button12"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:text="View work report" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:gravity="center">

        <Button
            android:id="@+id/button13"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:text="View allocated subject" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <Button
            android:id="@+id/button14"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:text="view mark" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:gravity="center">

        <Button
            android:id="@+id/button15"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:text="View timetable" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="93dp"
        android:gravity="center|top">

        <Button
            android:id="@+id/button6"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="logout" />
    </TableRow>

</LinearLayout>